@model List<Auction>

<div style="margin-top: 60px; font-weight:700;">
    <div>
        <h1 style="color: #A8A8A8;}">

            Auction
        </h1>
    </div>
<div class="grid-container" style="    height: 560px; overflow: hidden;">



    @foreach (var std in ViewData["imageAuctions"] as IList<AuctionImage>)
    {
         @foreach (var item in Model)
                {
        @if (std.AuctionId == item.AuctionId)
                    {
        @foreach (var std2 in ViewData["userAuctions"] as IList<User>)

            @if(std2.Id == item.UserId)
                                {
            @foreach (var std3 in ViewData["userimageAuctions"] as IList<UserProfile>)
               
                    
                        @if(std3.UserId == item.UserId)
                            {
                                <a class="text-dark float-right" style="float: right;" asp-controller="Auction" asp-action="Post" asp-route-id="@item.AuctionId">
                                    <div style="border-radius: 20px;width: 100%;height: 100%; margin:10px">

                                        <div>
                                            <p style="text-align: center;margin: 0;">
                                                <img draggable="false" class="" src="@Url.Content($"https://adoppix.s3.ap-southeast-1.amazonaws.com/{@std.ImageId}")" style="box-shadow: 1px 1px 1px lightgray; object-fit: cover; border-radius: 25px;width: 184px;height: 184px;" />
                                            </p>
                                        </div>


                                        <p class="text" style="padding-left: 20px;text-align: left;font-weight: bolder;font-size: 1rem;">

                                            @item.Title


                                        </p>
                                        <div style=" display: flex; flex-direction: row; padding: 0 20px;margin-top: -12px;font-size: 1rem;font-weight: bold;">
                                            <div>
                                                <p>
                                                    <img draggable="false" oncontextmenu="return false;" src="@Url.Content($"https://adoppix.s3.ap-southeast-1.amazonaws.com/{@std3.AvatarName}")" style="border-radius: 50%; width: 24px; height: 24px; object-fit: cover; border:1px solid #EDEDED;top: 24%;background: white;" id="blah" />
                                                </p>

                                            </div>
                                            <div>
                                                <p>
                                                    @std2.UserName
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                </a>
                            }
                    }
                }
            }
        }
    











</div>

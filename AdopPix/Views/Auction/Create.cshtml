                border-radius: 50px;
        padding: 13px 16px;
        border: none;
        background: #0096fa;
        color: white;
        font-size: 1rem;
        font-weight: 700;
        transition: .5s all;
    }
        .btn-create:hover {
        opacity: 0.8;
        transition: .5s all;
    }
        .image {
        box-shadow: 1px 1px 3px lightgray;
        max-height:600px;    
    }
    .profile-setting {
        border-top: 5px solid #4F9FDA;
        color: #4F9FDA;
        font-weight: 900;
        font-size: 21px;
        text-decoration: none;
        padding: 0 20px;
    }

        .profile-setting:hover {
            color: #4F9FDA;
        }

    .security-setting {
        border-top: 5px solid #E2E2E2;
        color: #E2E2E2;
        font-weight: 900;
        font-size: 21px;
        text-decoration: none;
        padding: 0 20px;
        transition: .5s;
        margin-left: -8px;
    }

        .security-setting:hover {
            border-top: 5px solid #4F9FDA;
            color: #4F9FDA;
        }

    .backtoindex {
        border: 3px solid #BBB;
        border-radius: 10px;

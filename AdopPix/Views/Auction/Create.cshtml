@model AuctionViewModel
<div class="d-flex justify-content-center mt-3" style="margin-bottom:180px; margin-top:60px;">
    <div>

        <div>
            <p style="text-align: center;">
                <img id="blah" class="image" src="@Url.Content($"https://adoppixstorage.s3.ap-southeast-1.amazonaws.com/cover-default.jpg")" style="height: 500px;width: auto; object-fit: cover;" />
            </p>

        </div>





        <form asp-action="Create" method="post" enctype="multipart/form-data" style="width: 430px;margin: auto;">
                 
                    <div class="mb-3">
                            <label class="form-label">Image</label>
                            <input type="file" asp-for="@Model.AuctionFile" class="form-control" id="imgInp" />
                            <input type="hidden" asp-for="@Model.ImageId" id="formFile" />
                            <span asp-validation-for="AuctionFile"></span>
                    </div>




                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
@*                            <div class="form-group">
                                <label asp-for="HourId" class="control-label"></label>
                                <input asp-for="HourId" type="number" class="form-control" />
                                <span asp-validation-for="HourId" class="text-danger"></span>
                            </div>*@
                    <div>
                        <label class="form-label">Hours</label>
                        <select asp-for="HourId"  class="form-control" id="HourId" name="HourId" required>
                            <option>Select Hours for Auction</option>
                            <option asp-for="HourId" value="1">24 Hours</option>
                            <option asp-for="HourId" value="2">48 Hours</option>
                        </select>
                         <span asp-validation-for="HourId" class="text-danger"></span>
                    </div>
                        

                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="OpeningPrice" class="control-label"></label>
                                <input value="0" asp-for="OpeningPrice" type="number" class="form-control"/>
                                <span asp-validation-for="OpeningPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HotClose" class="control-label"></label>
                                <input asp-for="HotClose" class="form-control" type="number"/>
                                <span asp-validation-for="HotClose" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group"><p style="text-align:center;">
                        <input type="submit" value="agree to the terms and post" class="float-right btn-create" />

                    </p>
                    </div>

                </form>
    </div>
</div>

<script>
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
            blah.src = URL.createObjectURL(file)
        }
    }

    function AddSocialFormToggle(event) {
        event.preventDefault();
        var x = document.getElementById("AddSocial");
        if(x.style.display === "none")
        {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }

</script>



<style>

    .btn-create{
                border-radius: 50px;
        padding: 13px 16px;
        border: none;
        background: #0096fa;
        color: white;
        font-size: 1rem;
        font-weight: 700;
        transition: .5s all;
    }
        .image {
        box-shadow: 1px 1px 3px lightgray;
        max-height:600px;    
    }
    .profile-setting {
        border-top: 5px solid #4F9FDA;
        color: #4F9FDA;
        font-weight: 900;
        font-size: 21px;
        text-decoration: none;
        padding: 0 20px;
    }

        .profile-setting:hover {
            color: #4F9FDA;
        }

    .security-setting {
        border-top: 5px solid #E2E2E2;
        color: #E2E2E2;
        font-weight: 900;
        font-size: 21px;
        text-decoration: none;
        padding: 0 20px;
        transition: .5s;
        margin-left: -8px;
    }

        .security-setting:hover {
            border-top: 5px solid #4F9FDA;
            color: #4F9FDA;
        }

    .backtoindex {
        border: 3px solid #BBB;
        border-radius: 10px;
        padding: 10px 19px;
        text-decoration: none;
        color: #BBB;
        width: 222px !important;
        font-weight: bolder;
        transition: .5s;
        text-align: center;
    }

        .backtoindex:hover {
            border: 3px solid #FF9898;
            color: #FF9898;
        }

    .save-btn {
        border: 3px solid #4F9FDA;
        border-radius: 10px;
        padding: 10px 19px;
        text-decoration: none;
        color: #4F9FDA;
        width: 222px !important;
        font-weight: bolder;
        transition: .5s;
        background: none;
    }

        .save-btn:hover {
            border: 3px solid #98D3C9;
            color: #98D3C9;
        }
</style>
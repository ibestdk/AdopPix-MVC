        text-decoration: none;
        color: #BBB;
        width: 222px !important;
        font-weight: bolder;
        transition: .5s;
        text-align: center;
    }

        .backtoindex:hover {
            border: 3px solid #FF9898;
            color: #FF9898;
        }

    .save-btn {
        border: 3px solid #4F9FDA;
        border-radius: 10px;
        padding: 10px 19px;
        text-decoration: none;
        color: #4F9FDA;
        width: 222px !important;
        font-weight: bolder;
        transition: .5s all;
        background: none;
    }    
    .save-btn:hover {
        opacity: 0.8;
        transition: .5s all;
    }

        .save-btn:hover {
            border: 3px solid #98D3C9;
            color: #98D3C9;
        }
</style>
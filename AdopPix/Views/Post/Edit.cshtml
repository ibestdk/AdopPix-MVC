@model EditViewModel


<div style="margin-bottom: 160px">
    @foreach (var std2 in ViewData["userAuctions"] as IList<User>)
    {
        @if (std2.Id == Model.UserId)
        {

            @foreach (var std3 in ViewData["userimageAuctions"] as IList<UserProfile>)
            {
                @if (std3.UserId == Model.UserId)
                {
                    <div class="container-xl">
                        <div class="row mt-4">
                            <div class="text-center col">
                                <img src="@Url.Content($"https://adoppix.s3.ap-southeast-1.amazonaws.com/{@Model.ImageName}")" class="img-fluid rounded image" id="blah" />
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col">
                            </div>
                            <div class="col" style="margin-left: 20%; margin-top:60px;">
                                <div style=" display: flex; flex-direction: column; padding: 0 20px;margin-top: -12px;font-size: 1rem;font-weight: bold;">
                                    <div style="display: flex;">
                                        <p>
                                            <img draggable="false" oncontextmenu="return false;" src="@Url.Content($"https://adoppix.s3.ap-southeast-1.amazonaws.com/{@std3.AvatarName}")" style="border-radius: 50%; width: 40px; height: 40px; object-fit: cover; border:1px solid #EDEDED;top: 24%;background: white;" id="blah" />
                                        </p>
                                        <div style="margin-left: 10px;">
                                            <p style="margin-top: 8px;margin-left: 5px;">
                                                @std2.UserName
                                            </p>
                                        </div>
                                    </div>
                                    <div>
                                        <form asp-action="Edit" method="post">
                                            <input type="hidden" asp-for="@Model.PostId" />
                                                <label>title</label>
                                            <div>
                                                <input class="input-title" style="font-weight: bold; font-size:1.2rem; type="text" asp-for="@Model.Title" />
                                            </div>
                                                <label>Description </label>
                                            <div>
                                                 <textarea class="input-description" cols="20" id="Description" name="Description" rows="2">@Model.Description</textarea>
                                            </div>
                                            <div style="margin-left: 370px;margin-top: 40px;">

                                                <input type="submit" class="btn save-btn" value="Edit" />
                                            </div>
                                        </form>

                                        
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                }
            }
        }
    }
</div>


@page
@model AdopPix.Pages.auth.MFASetupModel
@{
    ViewBag.NavbarIsShow = true;
}

@if (Model.Succeeded)
{
    <div>
        <div class="d-flex justify-content-center mt-5 mb-3">
            <img src="https://www.dynamicpeople.nl/wp-content/uploads/2021/03/Authenticator-app-1600x1065.png" class="img-fluid w-25" />
        </div>
    </div>
    <div>
        <div class="d-flex justify-content-center mb-3">
            <h1>Multi factor authentication is enable.</h1>
        </div>
    </div>

}
else
{
    <div style="box-shadow: 1px 1px 37px lightgray;padding: 100px 30px;border-radius: 20px;">
    <div class="">
        <div class="d-flex justify-content-center">
            <h4>Step 1 Scan qr code to your authenticator app</h4>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@string.Format("data:image/png;base64,{0}", @Convert.ToBase64String(Model.mFASetupViewModel.QRCodeBytes))" width="300" height="300" />
    </div>
    <div class="d-flex justify-content-center">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label class="col-form-label">Token</label>
            </div>
            <div class="col-auto">
                <input type="text" class="form-control" asp-for="@Model.mFASetupViewModel.Key" disabled>
            </div>
            <div class="col-auto">
                <span class="form-text">
                    <button class="btn btn-primary">Copy</button>
                </span>
            </div>
        </div>
    </div>

    <form method="post">
        <div class="mt-5">
            <div class="d-flex justify-content-center">
                <h4>Step 2 Enter security code from your authenticator app</h4>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="mb-3 w-25">
                <label>Security Code</label>
                <input type="text" asp-for="mFASetupViewModel.SecurityCode" class="form-control" />
                <span asp-validation-for="mFASetupViewModel.SecurityCode" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="d-grid gap-2 w-25">
                <input type="submit" value="Verify" class="verify" />
            </div>
        </div>
        <input type="hidden" asp-for="mFASetupViewModel.Key" />
        <input type="hidden" asp-for="mFASetupViewModel.QRCodeBytes" />
    </form>
    @if (ViewData["ErrorMessage"] != null)
    {
        <p>@ViewData["ErrorMessage"]</p>
    }
</div>
}



<style>
    .verify {
        background-color: #4F9FDA;
        color: white;
        border-radius: 41px;
        padding: 6px;
        text-decoration: none;
        margin-bottom: 30px;
        margin-top: 15px;
        font-weight: 700;
        font-size: 1rem;
        line-height: 30px;
        border: none;
        transition: .5s all;
    }

        .verify:hover {
            opacity: 0.8;
            transition: .5s all;
        }
</style>
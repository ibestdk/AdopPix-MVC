    font-size: 1.5rem;
}
.controller-form{
    background: rgba(255, 255, 255, 0.882);
padding: 40px;
border-radius: 10px;
}
.input-rework{
    border-radius: 50px;
border: none;
background: #EEEEEE;
padding: 4px 28px;
font-size: 20px;
}
   .resetpassword {
        background-color: #4F9FDA;
color: white;
